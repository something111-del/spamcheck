{
    "builds": [
        {
            "src": "backend/src/api.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": [
                    "backend/src/spam_model.joblib"
                ]
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/predict",
            "dest": "backend/src/api.py"
        },
        {
            "src": "/health",
            "dest": "backend/src/api.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}